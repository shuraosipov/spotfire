FROM centos:7
RUN yum install postgresql-server -y
COPY postgres_install/* ./
ENV DB_HOST=""
ENV DBADMIN_NAME=""
ENV DBADMIN_PASSWORD=""
ENV SERVERDB_NAME=""
ENV SERVERDB_USER=""
ENV SERVERDB_PASSWORD=""
ENTRYPOINT bash create_databases.sh $DB_HOST $DBADMIN_NAME $DBADMIN_PASSWORD $SERVERDB_NAME $SERVERDB_USER $SERVERDB_PASSWORD
